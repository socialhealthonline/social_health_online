<!-- The Modal -->
<div class='modal' id='profileModal'>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <!-- Modal Header -->
      <div class='modal-header' id="userHeader">
        <button class='close' data-dismiss="modal">Ã—</button>
        <h3 class= "modal-title"><%= user.display_name %>&nbsp<%= user.user_manager %></h3>
      </div>
      <!-- Modal body -->
      <div class='modal-body'>
        <%= user.user_avatar %>
        <p></p>
        <%= user.profile_name %>
        <%= user.profile_email %>
        <%= user.profile_phone %>
        <%= user.profile_address %>
        <%= user.profile_city %>
        <%= user.profile_state %>
        <%= user.profile_zip %>
        <%= user.profile_birthdate %>
        <%= user.profile_gender %>
        <%= user.profile_ethnicity %>
        <%= user.profile_relationship_status %>
        <%= user.profile_education_level %>
        <%= user.profile_occupation %>
        <%= user.profile_languages %>
        <%= user.profile_interest_types %>
        <%= user.profile_hobbies %>
        <%= user.profile_pet_peeves %>
        <%= user.profile_bio %>
        <% unless authenticated_user.display_name == user.display_name %>
        <center><%= link_to 'Contact User', new_conversation_path(recipient_id: user.id), target: '_blank', class: 'btn btn-primary', style: 'border: 1px solid black' %></center>
        <% end %>
      </div>
      <!-- Modal footer -->
    </div>
  </div>
</div>

.container
  .row.pt-5
    .col
      %h2.brand-primary My Community

  .row
    .col
      = form_with model: @customer, url: [:manage, :update, @customer], local: true do |f|
        .row
          .col-lg-6
            .form-group
              %label(for="customer_name") Customer Name
              = f.text_field :name, autofocus: true, class: "form-control #{form_error_class(@customer, :name)}"
              = model_error_display(@customer, :name)
          .col-lg-6
            .form-group
              %label(for="customer_address") Address
              = f.text_field :address, class: "form-control #{form_error_class(@customer, :address)}"
              = model_error_display(@customer, :address)
        .row
          .col-lg-4
            .form-group
              %label(for="customer_city") City
              = f.text_field :city, class: "form-control #{form_error_class(@customer, :city)}"
              = model_error_display(@customer, :city)
          .col-lg-4
            .form-group
              %label(for="customer_state") State
              = f.select :state, US_STATES, {}, { class: 'form-control custom-select' }
              = model_error_display(@customer, :state)
          .col-lg-4
            .form-group
              %label(for="customer_zip") Zip
              = f.text_field :zip, class: "form-control #{form_error_class(@customer, :zip)}"
              = model_error_display(@customer, :zip)
        .row
          .col-lg-6
            .form-group
              %label(for="customer_url") Website
              = f.text_field :url, class: "form-control #{form_error_class(@customer, :url)}"
              = model_error_display(@customer, :url)
          .col-lg-6
            .form-group
              %label(for="customer_events_url") Events Website
              = f.text_field :events_url, class: "form-control #{form_error_class(@customer, :events_url)}"
              = model_error_display(@customer, :events_url)
        .row
          .col-lg-6
            .form-group
              %label(for="customer_primary_manager_id") Primary Manager
              = f.select :primary_manager_id, options_from_collection_for_select(@managers, 'id', 'name', @customer.primary_manager_id), { include_blank: true }, { class: 'form-control custom-select' }
              = model_error_display(@customer, :primary_manager_id)
        .row
          .col
            .form-group
              %label(for="customer_bio") Bio
              = f.text_area :bio, rows: 4, class: "form-control #{form_error_class(@customer, :bio)}"
              = model_error_display(@customer, :bio)
        .mb-5
          = f.submit 'Save', class: 'btn btn-primary', data: { disable_with: 'Saving...' }

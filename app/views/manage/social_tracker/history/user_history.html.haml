- page_title 'My Community Social Tracker'

.container
  .row
    .col.mt-5
      .row
        .col-8
          %h1.text-info My Community Social Tracker
          %h3.text-info Users
        .col-4
          .dropdown.text-right
            %a.btn.btn-primary.dropdown-toggle(href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
              %i.fas.fa-cog
              Manage
            .dropdown-menu.dropdown-menu-right
              = link_to 'Profile', manage_edit_member_path, class: 'dropdown-item'
              = link_to 'Events', manage_events_path, class: 'dropdown-item'
              = link_to 'Social Tracker', manage_social_tracker_users_path, class: 'dropdown-item'

    - if @social_event_logs.any?
      .table-responsive

        %table.table.table-borderless.align-items-center
          %thead
            %tr
              %th 
                %strong Log Date
              %th 
                %strong Event Date
          %tbody
            - @social_event_logs.each do |log|
              %tr.bg-white
                %td= short_date_slashed(log.created_at)
                %td= short_date_slashed(log.event_date)
        = will_paginate @social_event_logs
    - else
      %p.text-muted
        %em No Social Event Logs were found.

    %p.py-3
      = link_to manage_social_tracker_users_path do
        %span
          %i(class="fas fa-arrow-circle-left")
          Back
        
= form_with(model: @announcement, url: [:manage, @announcement], local: true) do |f|
  .row.justify-content-center.mt-2
    .col-9
      * Indicates required field
      .row.mt-2
      %h5 Announcement Information
      .form-group.mt-2
        %label Announcement Title *
        = f.text_field :title, class: "form-control #{form_error_class(@announcement, :title)}", required: true
        = model_error_display(@announcement, :title)
  .row.justify-content-center
    .col-9
      .form-group
        %label Announcement Body *
        = f.text_area :body, rows: 12, class: "form-control #{form_error_class(@announcement, :body)}", required: true
        = model_error_display(@announcement, :body)
  .row.justify-content-center
    .col-lg-6
      .card
        .card-body.text-center.px-2
          .form-check
            = f.check_box :special_announcement, class: 'form-check-input'
            %label.form-check-label(for="special_announcement") Special Announcement - Spotlight the Announcement for Users


  .mb-3.text-center
    = f.submit 'Save', class: 'btn btn-primary', data: { disable_with: 'Saving...' }, style: 'border: 1px solid black;'
    - if @announcement.persisted?
      = link_to 'Cancel', manage_announcements_path, class: 'btn btn-outline-secondary', style: 'border: 1px solid black;'
    - else
      = link_to 'Cancel', manage_announcements_path, class: 'btn btn-outline-secondary', style: 'border: 1px solid black;'

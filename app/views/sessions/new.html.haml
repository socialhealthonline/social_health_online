.container
  .row
    .col-lg-4.ml-auto.mr-auto
      %h3.text-center.pt-5 Sign In
      .card
        .card-body
          = form_tag [:sessions], role: 'form' do
            .form-group
              %label(for="sign-in-email") Email
              = email_field_tag :email, params[:email], id: 'sign-in-email', autofocus: true, class: 'form-control', required: true, tabindex: 1
            .form-group
              .d-flex.justify-content-between
                %label(for="sign-in-password") Password
                -# = link_to 'Forgot Password?', new_password_reset_path
              = password_field_tag :password, nil, required: true, id: 'sign-in-password', class: 'form-control', tabindex: 2
            = submit_tag 'Sign In', class: 'btn btn-primary btn-block', data: { disable_with: 'Please wait...' }, tabindex: 3

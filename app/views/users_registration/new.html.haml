- page_title 'Guest User Registration'

.container
  .row.pt-3
    .col.pb-4
      %h1.brand-primary.text-center
        Guest User Registration
  .row
    .col
      = form_with url: users_registration_url, method: :post, local: true do
        = hidden_field_tag :subject, ''
        %h5.pb-2{:style => 'border-bottom: 2px solid black;'} Account Information 
        .row
          .col-lg-6
            .form-group
              %label(for="name") Guest User Name
              %i.c-pointer.fas.fa-info-circle.fa{:title => 'Name of the person registering to become a Guest User'}
              = text_field_tag :name, params[:name], autofocus: true, class: 'form-control', required: true
          .col
            .form-group
              %label(for="address") Address
              = text_field_tag :address, params[:address], class: 'form-control', required: true
        .row
          .col-lg-6
            .form-group
              %label(for="email") City
              = text_field_tag :city, params[:city], class: 'form-control', required: true
          .col-lg-4
            .form-group
              %label(for="state") State
              = text_field_tag :state, params[:state], class: 'form-control', required: true
          .col-lg
            .form-group
              %label(for="zip") ZIP Code
              = text_field_tag :zip, params[:zip], class: 'form-control', required: true
            .form-group
        .row
          .col-lg-4
            .form-group
              %label(for="email") Email
              =email_field_tag :email, params[:email], class: 'form-control', required: true
          .col-lg-4
            .form-group
              %label(for="phone") Phone
              %i.c-pointer.fas.fa-info-circle.fa{:title => 'Provide the area code and phone number of the person registering here in ten digits'}
              =text_field_tag :phone, params[:phone],  :placeholder => "E.g., 8662825789", class: 'form-control', required: true
          .col-lg-4
            .form-group
              %label(for="age") Age
              = text_field_tag :age, params[:age], class: 'form-control', required: true
        .row
          %div.ml-2.mb-2
            = recaptcha_tags callback: 'thenCapchaIsSubmited', expired_callback: 'expiredRecapchaCallback'

        .row.mb-3
          .col.text-center
            = submit_tag 'Submit', class: 'btn btn-primary', style: 'border: 1px solid black;', data: { disable_with: 'Please wait...' }

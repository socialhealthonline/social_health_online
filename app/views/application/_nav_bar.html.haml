.nav-container
  .bg-info.navbar-dark
    .container
      %nav.navbar.navbar-expand-lg
        = link_to root_path, class: 'navbar-brand' do
          = image_tag 'logo.png', alt: 'Social Health Online', height: '40'
        %button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          %span.navbar-toggler-icon
        .collapse.navbar-collapse.justify-content-between#navbarNav
          %ul.navbar-nav.font-weight-bold
            %li.nav-item.dropdown
              %a.nav-link.dropdown-toggle#navbarDropdownMenuLink{href: '/service', 'aria-haspopup' => true, 'aria-expanded' => false, 'data-toggle' => 'dropdown'}
                = 'Our Service'
              .dropdown-menu.dropdown-menu-right{ 'aria-labelledby' => 'navbarDropdownMenuLink'}
                = link_to about_us_path, class: 'dropdown-item' do
                  About Us
                = link_to service_path, class: 'dropdown-item' do
                  Service Information
                = link_to service_highlights_path, class: 'dropdown-item' do
                  Service Highlights
            -# %li.nav-item{class: "#{active_nav('membership')}"}
            -#   = link_to 'Membership', membership_path, class: 'nav-link'
            %li.nav-item.dropdown
              %a.nav-link.dropdown-toggle#navbarDropdownMenuLink{href: '/membership', 'aria-haspopup' => true, 'aria-expanded' => false, 'data-toggle' => 'dropdown'}
                = 'Membership'
              .dropdown-menu.dropdown-menu-right{ 'aria-labelledby' => 'navbarDropdownMenuLink'}
                = link_to membership_path, class: 'dropdown-item' do
                  Membership Information
                = link_to member_locator_path, class: 'dropdown-item' do
                  Member Locator
                = link_to affiliate_locator_path, class: 'dropdown-item' do
                  Affiliate Locator
                = link_to join_path, class: 'dropdown-item' do
                  User Enrollment
            %li.nav-item{class: "#{active_nav('pricing')}"}
              = link_to 'Pricing', pricing_path, class: 'nav-link'
            %li.nav-item{class: "#{active_nav('support')}"}
              = link_to 'Support', support_path, class: 'nav-link'
            %li.nav-item{class: "#{active_nav('news')}"}
              = link_to 'News', news_path, class: 'nav-link'
            %li.nav-item{class: "#{active_nav('contact')}"}
              = link_to 'Contact Us', contact_path, class: 'nav-link'
          %ul.navbar-nav
            - if authenticated_user
              %li.nav-item.dropdown
                %a.nav-link.dropdown-toggle#userDropdownMenuLink{href: '#', 'aria-haspopup' => true, 'aria-expanded' => false, 'data-toggle' => 'dropdown'}
                  = authenticated_user.name
                .dropdown-menu.dropdown-menu-right{ 'aria-labelledby' => 'userDropdownMenuLink'}
                  - if authenticated_user.admin?
                    = link_to console_path, class: 'dropdown-item' do
                      %i.fas.fa-tachometer-alt
                      Console
                  = link_to profile_path, class: 'dropdown-item' do
                    %i.fas.fa-user-circle
                    My Profile
                  = link_to signout_path, method: :delete, class: 'dropdown-item', id: 'nav-signout', data: { confirm: 'Are you sure you would like to sign out? Press OK to continue.' } do
                    %i.fas.fa-sign-out-alt
                    Sign Out
            - else
              %li.nav-item
                = link_to 'Sign In', signin_path

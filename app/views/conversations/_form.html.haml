= form_for :conversation, url: :conversations, html: { id: 'conversation-form' } do |f|
  .form-group
    = f.label :recipients
    = f.select(:recipients, User.all_except(authenticated_user).collect {|p| [ p.email, p.id ] }, {},
    { multiple: true, required: true, class: 'form-control resipients-select', data: { placeholder: 'Select recipients' } })
  .form-group
    = f.label :subject
    = f.text_field :subject, placeholder: 'Subject', class: 'form-control', required: true
  .form-group
    = f.label :message
    = f.text_area :body, class: 'form-control',placeholder: 'Type your message here', rows: 4, required: true
  = f.submit 'Send Message', class: 'btn btn-info'
  = link_to 'Cancel', mailbox_inbox_path, class: 'btn btn-outline-secondary'

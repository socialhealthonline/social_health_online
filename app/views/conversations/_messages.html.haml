.row
  .col-6
    %h4.mb-3= "Subject: #{conversation.subject}"
  .col
    .pull-right
      - if conversation.is_trashed?(authenticated_user)
        = link_to 'Untrash', untrash_conversation_path(conversation), class: 'btn btn-success', method: :post
      - else
        = link_to 'Move to trash', trash_conversation_path(conversation), class: 'btn btn-danger', method: :post,
         data: { confirm: 'Are you sure?' }
.table-responsive
  %table.table.messages-box.inside-message.align-items-center
    %tbody
      - @receipts.each do |receipt|
        - message = receipt.message
        %tr.bg-white
          %th{:scope => 'row'}
            %b= message.sender.name
            %br/
            = message.created_at.strftime('%A, %b %d, %Y at %I:%M%p')
            %br/
            .mt-1= message.body
        %tr.table-divider

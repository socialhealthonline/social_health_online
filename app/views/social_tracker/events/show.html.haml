.container
  .row
    .col.py-3
      %h1.text-info.text-center Event Log
      .row
        .col-lg-6.mb-2.text-center
          %p
            %strong Event Date:
          %p= short_date(@log.event_date)
          %p
            %strong Event State:
          %p= US_STATES.key(@log.state)
          %p
            %strong Event City:
          %p= @log.city
          %p
            %strong Event Type
          %p= @log.event_type
        .col-lg-6.text-center
          %p
            %strong Event Source:
          %p= SocialEventLog::EVENT_SOURCES.key(@log.source)
          %p
            %strong Event Category:
          %p= @log.event_category
          %p
            %strong Event Location:
          %p= @log.venue
          %p
            %strong Event Rating:
          %p= RATINGS.key(@log.rating)
      %p.pt-3
        = link_to social_tracker_history_path, class: 'btn btn-outline-primary', style: 'border: 1px solid black;' do
          %i.fas.fa-arrow-left
          Back

%nav(aria-label="breadcrumb")
  %ol.breadcrumb
    %li.breadcrumb-item= link_to 'Notifications', console_notifications_path
    %li.breadcrumb-item.active(aria-current="page")= @notification.title

.d-flex.justify-content-left.flex-wrap.flex-md-nowrap.align-items-top.mt-3
  %h1.h3.brand-primary= @notification.title
.row.text-left
  .col
    .announcements-date= time_in_cdt(@notification.updated_at, '%m/%d/%Y')
%p.border-top
  = simple_format(@notification.body)

.mb-3
  = link_to console_notifications_path, class: 'btn btn-outline-primary', :style => 'border: 1px solid black;' do
    %i.fas.fa-arrow-left
    Back

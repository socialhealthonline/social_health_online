%nav(aria-label="breadcrumb")
  %ol.breadcrumb
    %li.breadcrumb-item= link_to 'Members', console_members_path
    %li.breadcrumb-item= link_to @member.name, console_member_path(@member)
    %li.breadcrumb-item.active(aria-current="page") Users

.d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-top.mb-3.border-bottom
  %h1.h3.brand-primary Users
  %div
    = link_to new_console_member_user_path(@member), class: 'btn btn-outline-primary' do
      %i.fas.fa-plus-circle
      Add User

- if @users.any?
  .table-responsive
    %table.table
      %thead
        %tr
          %th Name
          %th Display Name
          %th Email
          %th Manager
          %th Last Sign In
          %th
      %tbody
        - @users.each_with_index do |user, i|
          %tr
            %td= link_to "#{i+1}. #{user.name}", console_member_user_path(@member, user)
            %td= user.display_name
            %td= user.email
            %td
              - if user.manager?
                %i.far.fa-check-circle.text-success(title="Manager")

            %td= short_date user.last_sign_in_at
            %td
              = link_to edit_console_member_user_path(@member, user), title: 'Edit', class: 'btn btn-sm btn-outline-primary' do
                %i.far.fa-edit
              &nbsp;
              = link_to console_member_user_path(@member, user), title: 'Delete', id: "delete_user_#{user.id}", class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'Please confirm that you wish to delete this user. Press OK to continue.' } do
                %i.far.fa-trash-alt
- else
  %p.text-muted
    %em No users were found.

.row.justify-content-center.mb-3
  .col-md-6
    .card.card-box
      .card-body.justify-content-center.pt-0
      = form_with model: @bulletin, url: [:console_manage_bulletins], local: true do |f|
        .row.justify-content-center
          .col-lg-10
            .form-group
              %label(for="title") Bulletin Title
              = f.text_field :title, autofocus: true, class: "form-control #{form_error_class(@bulletin, :title)}", required: true
              = model_error_display(@bulletin, :title)

        .row.justify-content-center
          .col-lg-10
            .form-group
              %label(for="event_type") Event Type
              = f.select :event_type, EVENT_TYPES, { include_blank: true }, { class: "#{form_error_class(@bulletin, :event_type)} form-control custom-select" }
              = model_error_display(@bulletin, :event_type)

        .row.justify-content-center
          .col-lg-10
            .form-group
              %label(for="start_at") Event Date/Time
              = f.text_field :start_at, class: "flatpickr-date-time form-control #{form_error_class(@bulletin, :start_at)}", required: true
              = model_error_display(@bulletin, :start_at)

        .row.justify-content-center
          .col-lg-10
            .form-group
              %label(for="location") Location
              = f.text_field :location, class: "form-control #{form_error_class(@bulletin, :location)}"
              = model_error_display(@bulletin, :location)

        .row.justify-content-center
          .col-lg-10
            .form-group
              %label(for="address") Address
              = f.text_field :location, class: "form-control #{form_error_class(@bulletin, :address)}"
              = model_error_display(@bulletin, :address)

        .row.justify-content-center
          .col-lg-10
            .form-group
              %label(for="city") City
              = f.text_field :city, class: "form-control #{form_error_class(@bulletin, :city)}"
              = model_error_display(@bulletin, :city)

        .row.justify-content-center
          .col-lg-10
            .form-group
              %label(for="state") State
              = f.select :state, US_STATES, { required: true }, { class: "#{form_error_class(@bulletin, :state)} form-control custom-select" }
              = model_error_display(@bulletin, :state)

        .row.justify-content-center
          .col-lg-10
            .form-group
              %label(for="zip") ZIP Code
              = f.text_field :city, class: "form-control #{form_error_class(@bulletin, :zip)}"
              = model_error_display(@bulletin, :zip)

        .row.justify-content-center
          .col-lg-10
            .form-group
              %label(for="description") Description
              = f.text_area :description, autofocus: true, class: "form-control #{form_error_class(@bulletin, :description)}", required: true
              = model_error_display(@bulletin, :description)

        .mb-3.text-center
          = f.submit 'Save', class: 'btn btn-primary', data: { disable_with: 'Saving...' }, style: 'border: 1px solid black;'
          = link_to 'Cancel', console_manage_bulletins_path, class: 'btn btn-outline-secondary', style: 'border: 1px solid black;'

.d-flex.justify-content-center.flex-wrap.flex-md-nowrap.align-items-center.py-3.px-2
  %h1.brand-primary Edit Bulletin

= form_with model: @bulletin, url: [:console_manage_bulletin], local: true do |f|
  .row.justify-content-center
    .col-md-6
      .form-group
        %label.font-weight-bold(for="title") Bulletin Title
        = f.text_field :title, autofocus: true, class: "form-control #{form_error_class(@bulletin, :title)}", required: true
        = model_error_display(@bulletin, :title)

  .row.justify-content-center
    .col-lg-6
      .form-group
        %label.font-weight-bold(for="event_type") Event Type
        = f.select :event_type, EVENT_TYPES, { include_blank: true }, { class: "#{form_error_class(@bulletin, :event_type)} form-control custom-select" }
        = model_error_display(@bulletin, :event_type)

  .row.justify-content-center
    .col-lg-6
      .form-group
        %label.font-weight-bold(for="city") City
        = f.text_field :city, class: "form-control #{form_error_class(@bulletin, :city)}"
        = model_error_display(@bulletin, :city)

  .row.justify-content-center
    .col-lg-6
      .form-group
        %label.font-weight-bold(for="state") State
        = f.select :state, US_STATES, { include_blank: true }, { class: "#{form_error_class(@bulletin, :state)} form-control custom-select" }
        = model_error_display(@bulletin, :state)

  .row.justify-content-center
    .col-md-6
      .form-group
        %label.font-weight-bold(for="start_at") Event Date/Time
        = f.text_field :start_at, class: "flatpickr-date-time form-control #{form_error_class(@bulletin, :start_at)}", required: true
        = model_error_display(@bulletin, :start_at)

  .row.justify-content-center
    .col-md-6
      .form-group
        %label.font-weight-bold(for="description") Bulletin Description
        = f.text_area :description, autofocus: true, class: "form-control #{form_error_class(@bulletin, :description)}", required: true
        = model_error_display(@bulletin, :description)

  .mb-3.text-center
    = f.submit 'Save', class: 'btn btn-primary', data: { disable_with: 'Saving...' }, style: 'border: 1px solid black;'
    = link_to 'Cancel', console_manage_bulletin_path, class: 'btn btn-outline-secondary', style: 'border: 1px solid black;'

.d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pb-2.mb-3.border-bottom
  %h1.h3.brand-primary Members
  = link_to new_console_member_path, class: 'btn btn-outline-primary' do
    %i.fas.fa-plus-circle
    Add Member

- if @members.any?
  .table-responsive
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th Contact Name
          %th Contact Email
          %th State
          %th
      %tbody
        - @members.each_with_index do |member, i|
          %tr
            %td= link_to "#{i+1}. #{member.name}", console_member_path(member)
            %td= member.contact_name
            %td= member.contact_email
            %td= member.state
            %td
              = link_to edit_console_member_path(member), title: 'Edit', class: 'btn btn-sm btn-outline-primary' do
                %i.far.fa-edit
              &nbsp;
              = link_to console_member_path(member), title: 'Delete', id: "delete_member_#{member.id}", class: 'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'Please confirm that you wish to delete this member. Press OK to continue.' } do
                %i.far.fa-trash-alt
- else
  %p.text-muted
    %em No members were found.

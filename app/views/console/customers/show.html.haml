%nav(aria-label="breadcrumb")
  %ol.breadcrumb
    %li.breadcrumb-item= link_to 'Customers', console_customers_path
    %li.breadcrumb-item.active(aria-current="page")= @customer.name

.d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pb-2.mb-3.border-bottom
  %h1.h3= @customer.name
  .dropdown
    %a.btn.btn-primary.dropdown-toggle(href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
      %i.fas.fa-cog
      Manage
    .dropdown-menu.dropdown-menu-right
      = link_to console_customer_users_path(@customer), class: 'dropdown-item' do
        %i.fas.fa-user-circle
        Users

%p= @customer.full_address

%p
  %strong Contact Name:
  = @customer.contact_name

%p
  %strong Contact Email:
  = @customer.contact_email

%p
  %strong Contact Phone:
  = number_to_phone @customer.contact_phone

%p
  %strong Service Capacity:
  = @customer.service_capacity

%p
  %strong Account Start Date:
  = short_date @customer.account_start_date

%p
  %strong Account End Date:
  = short_date @customer.account_end_date

%p
  %strong Suspended:
  = @customer.suspended? ? 'Yes' : 'No'

%p
  = link_to edit_console_customer_path(@customer), class: 'btn btn-outline-primary' do
    %i.far.fa-edit
    Edit
  &nbsp;
  = link_to console_customer_path(@customer), method: :delete, class: 'btn btn-outline-danger', data: { confirm: 'Please confirm that you wish to delete this customer. Press OK to continue.' } do
    %i.far.fa-trash-alt
    Delete

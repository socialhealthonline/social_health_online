- if user.user_status == 'enabled'
  %td.font-weight-bold=link_to 'View Profile', fetch_user_path(user_id: user.id), {"data-target" => "#profileModal", "data-toggle" => "modal", remote: true}
  %br
  - unless authenticated_user.display_name == user.display_name
    %td.font-weight-bold=link_to 'Send Message', new_conversation_path(recipient_id: user.id), target: '_blank'
    %br
    %td.font-weight-bold=link_to 'Add to Contacts', new_my_contact_path(contact_id: user.id), target: '_blank'
